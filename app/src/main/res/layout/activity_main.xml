<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:rowCount="10"
            tools:targetApi="ice_cream_sandwich">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="46dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/twothousand" />

            <ImageView
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/fivehundred" />

            <ImageView
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/twohundred" />

            <ImageView
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/onehundred" />

            <ImageView
                android:layout_row="4"
                android:layout_column="0"
                android:background="@drawable/fifty" />

            <ImageView
                android:layout_width="107dp"
                android:layout_height="42dp"
                android:layout_row="5"
                android:layout_column="0"
                android:background="@drawable/twenty" />

            <ImageView
                android:layout_width="106dp"
                android:layout_height="41dp"
                android:layout_row="6"
                android:layout_column="0"
                android:background="@drawable/ten" />

            <ImageView
                android:layout_width="107dp"
                android:layout_height="51dp"
                android:layout_row="7"
                android:layout_column="0"
                android:background="@drawable/five" />

            <ImageView
                android:layout_width="106dp"
                android:layout_height="43dp"
                android:layout_row="8"
                android:layout_column="0"
                android:background="@drawable/two" />

            <ImageView
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:layout_row="9"
                android:layout_column="0"
                android:background="@drawable/one" />

            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="2000 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="500 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="200 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="100 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="50 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="20 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="10 X"
                android:textSize="20dp" />

            <TextView
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="5 X"
                android:textSize="20dp" />
            <TextView
                android:layout_row="8"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="2 X"
                android:textSize="20dp" />
            <TextView
                android:layout_row="9"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="1 X"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/twothou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/fivehun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/twohun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/onehun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/fifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/twenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <EditText
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />
            <EditText
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />
            <EditText
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="2"
                android:ems="4"
                android:inputType="number" />

            <TextView
                android:layout_row="0"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="1"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="2"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="3"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="4"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="5"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="6"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:layout_row="7"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />
            <TextView
                android:layout_row="8"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />
            <TextView
                android:layout_row="9"
                android:layout_column="3"
                android:text="="
                android:textSize="20sp" />

            <TextView
                android:id="@+id/result2000"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result500"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result200"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result100"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result50"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result20"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result10"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/result2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/result1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="4"
                android:ems="10"
                android:inputType="number" />

        </GridLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBD80D25"
        android:gravity="center"
        android:text="Convert Your Total Number Of Cash Into Money"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:ems="8"
        android:gravity="center"
        android:hint="Grand Total"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notes"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:ems="9"
        android:gravity="center"
        android:hint="Total number of notes"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="300dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>